
<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<%= link_to "Sign Up", new_user_path, class: "button" %> 
<% if current_user %>
  <%= link_to 'Log Out', session_path, method: :delete %>

<% end %>
<% if !current_user %>
<%= link_to "Login", new_session_path, class: "button" %>
<% end %>
<%= link_to "New Post", new_post_path, class: "button" %>
<h1>Listing Posts</h1>
<%= link_to 'New Post', new_post_path, class: "button" %>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', post_path(post), class: "button" %></td>
      <td><%= link_to 'Edit', edit_post_path(post), class: "button" %></td>
      <td><%= link_to 'Destroy', post_path(post), class: "button"
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>